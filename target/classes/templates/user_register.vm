#parse('templates/layout.vm')

#set($title = 'Register')

#@mainLayout()
## Include file that contains our form helpers.
    #parse("templates/form_helpers.vm")

<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<form method="post">
    <h2>Register</h2>
    #antiForgeryToken()

    <div class="form-group$error">
        <label for="username" style="text-transform: capitalize">Username</label>
        <input type="text" id="username" name="username" class="form-control">
        #validation_error($attribute)
    </div>
    #*#form_text_input("username")*#

    <div class="form-group$error">
        <label for="email" style="text-transform: capitalize">Email</label>
        <input type="email" id="email" name="email" class="form-control">
        #validation_error($attribute)
    </div>
   #* #form_email_input("email")*#

    <div class="form-group$error">
        <label for="password" style="text-transform: capitalize">Password</label>
        <input type="password" id="password" name="password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
        #validation_error($attribute)
    </div>
    <div class="form-group$error">
        <label for="confirm-password" style="text-transform: capitalize">Confirm Password</label>
        <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
        #validation_error($attribute)
    </div>

    <input type="checkbox" onclick="showPasswords()">Show confirm-password

    <div>
        <input type="submit" id="btnSaveUser" onclick="testPassword()" value="register" class="btn btn-default">
        |
        <a href="/users/login">Go back</a>
    </div>
</form>
</div>
#end
