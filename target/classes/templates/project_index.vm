#parse('templates/layout.vm')

## Set the title of the page.
#set($title = 'Home')

## Include your layout inside of the mainLayout macro.
#@mainLayout()
<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <h2>Projects</h2>

        <p><a href="$html.url("/projects/create")">Create New Project</a></p>

        <table class="table table-responsive table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Created</th>
                    <th>Milestones</th>
                    <th>Next Milestone</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                #foreach($project in $model)
                    <tr >
                        <td class="clickable-row" data-url="$html.url("/projects/details/$project.id")" style="cursor: pointer">$project.name</td>
                        <td>$project.created</td>
                        <td>$project.milestones</td>
                        <td>$project.nextMilestone</td>

                        <td style="cursor: pointer"><a href="$html.url("/projects/update/$project.id")" class="edit" data-id="$project.id"><i class="glyphicon glyphicon-edit"></i></a></td>
                        <td style="cursor: pointer"><a href="$html.url("/projects/delete/$project.id")" class="delete" data-id="$project.id"><i class="glyphicon glyphicon-trash"></i></a></td>
                    </tr>
                #end
            </tbody>
        </table>

        <script>
            $(function() {
                $('.clickable-row').click(function (evt) {
                    location.href = $(this).attr('data-url');
                });
            });
        </script>

    </div>
</div>
#end