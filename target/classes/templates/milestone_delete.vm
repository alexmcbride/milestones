#parse('templates/layout.vm')

#set($title = 'Create Project')

#@mainLayout()
<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        ## Include file that contains our form helpers.
        #parse("templates/form_helpers.vm")

        <form method="post">
            <h2>Delete Milestone</h2>

            #antiForgeryToken()

            <p>Are you sure you want to delete this milestone?</p>

            <p><strong>$html.encode($model.name)</strong></p>

            <div>
                <input type="submit" value="Delete Milestone" class="btn btn-default" data-id="$model.id">
                |
                <a class="createLink" href="$html.url("/projects/details/$model.projectId")">Go back</a>
            </div>
        </form>
    </div>
</div>
#end