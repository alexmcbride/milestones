## File that contains helpers for forms.

#macro(validation_error $model $attribute)
    #if ($model.hasValidationError($attribute))
        <span class="help-block">$model.getValidationError($attribute)</span>
    #end
#end

#macro(form_text_input $attribute)
    #set($error="")
    #if ($model.hasValidationError($attribute))
        #set($error=" has-error")
    #end

    <div class="form-group$error">
        <label for="name" style="text-transform: capitalize">$attribute</label>
        <input type="text" name="name" class="form-control">
        #validation_error($attribute)
    </div>
#end

#macro(form_email_input $attribute)
    #set($error="")
    #if ($model.hasValidationError($attribute))
        #set($error=" has-error")
    #end

<div class="form-group$error">
    <label for="name" style="text-transform: capitalize">$attribute</label>
    <input type="email" id="name" name="name" class="form-control">
    #validation_error($attribute)
</div>
#end

#macro(form_password_input $attribute)
    #set($error="")
    #if ($model.hasValidationError($attribute))
        #set($error=" has-error")
    #end

<div class="form-group$error">
    <label for="name" style="text-transform: capitalize">$attribute</label>
    <input type="password" id="name" name="name" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
    #validation_error($attribute)
</div>
#end

#macro(antiForgeryToken)
    <input type="hidden" name="antiForgeryToken" value="$antiForgeryHelper.generateToken()">
#end