#parse('templates/layout.vm')

#set($title = $model.name)

#@mainLayout()

<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<p><a href="/projects">main</a></p>

    <h2>My Account</h2>

    <p>Account Created: $model.joined</p>

    <form method="post">
        #antiForgeryToken()

        <div class="form-group$error">
            <label for="username" style="text-transform: capitalize">username</label>
            <input value="$model.username" type="text" id="username" name="username" class="form-control" required>
            #validation_error($model, $attribute)
        </div>

        <div class="form-group$error">
            <label for="email" style="text-transform: capitalize">email</label>
            <input value="$model.email" type="email" id="email" name="email" class="form-control" required>
            #validation_error($model, $attribute)
        </div>

    <div class="form-group$error">
        <label for="password" style="text-transform: capitalize">Password</label>
        <input value="$model.passowrd" type="password" id="password" name="password" class="form-control" required>
        #validation_error($model, $attribute)
    </div>

    <input type="checkbox" onclick="showPasswords()">Show confirm-password
        <div>
            <input type="submit" value="Update" class="btn btn-default">
        </div>
    </form>
</div>
#end

<Script src="/js/login_register.js"></Script>