#parse("templates/layout.vm")
#parse("templates/form_helpers.vm")

#set($title = 'Register User')

#@mainLayout()
    <div class="row">
        <div class="col-sm-4 col-sm-offset-4">
            <form method="post">

                <h2>login</h2>

                #if ($model.hasValidationError("auth"))
                    <div style="color: red;">$model.getValidationError("auth")</div>
                #end

                #antiForgeryToken()

                #form_email_input("email")

                #form_password_input("password")
                <input type="checkbox" onclick="showPasswords()">Show confirm-password

                <div>
                    <input type="submit" value="login" class="btn btn-default" onclick="validatePassword()">
                    |<a href="/users/register">Register</a>|
                    <a href="/users/pw_reset_email">Reset password</a>
                </div>
            </form>
        </div>
    </div>
#end
