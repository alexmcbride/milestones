#parse('templates/flash_messages.vm')

#macro(mainLayout)
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

    <title>Milestones#if($title) - $title#end</title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
    <link href="/css/williamCSS.css" rel="stylesheet">

    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript"></script>
    <script src="/lib/jquery-3.3.1.min.js"></script>
    <script src="/lib/bootstrap/js/bootstrap.js"></script>
    <script src="/js/login_register.js" rel="stylesheet"></script>
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/projects">Milestones</a>
            </div>

            #if ($userManager.loggedIn)
                <ul class="nav navbar-nav navbar-left">
                    <li><a href="#" data-toggle="modal" data-target="#sharedProjectsModal">
                        <i class="fas fa-envelope"></i>
                        Friend's Projects
                    </a></li>
                </ul>
            #end

            <ul class="nav navbar-nav navbar-right">
                <li><p id="welcome_email"></p></li>
                <li><a id="login" href="/users/login">Login <span class="sr-only">(current)</span></a></li>
                <li><a id="account" href="/users/account">#if ($userManager.getUser())$html.encode($userManager.getUsername())#end</a></li>
                <li><a id="register" href="/users/register">Register</a></li>
                <li><a id="logout" href="/users/logout">Logout</a></li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid">
        #flash_messages()

        ## This is where the content of the template will be displayed.
        $!bodyContent
    </div>

    <footer class="container-fluid footer text-muted small text-center">
        Copyright &copy; Milestones 2018
    </footer>

    ## Shared projects modal dialog.
    <div class="modal fade" id="sharedProjectsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content" style="width: 100%;">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Shared Projects</h4>
                </div>
                <div class="modal-body shared-projects-content">
                    <div class="row">
                        <div class="col-sm-4"><strong>Project</strong></div>
                        <div class="col-sm-4"><strong>User</strong></div>
                        <div class="col-sm-4"><strong>Shared</strong></div>
                    </div>
                    #if ($userManager.loggedIn)
                        #foreach ($project in $userManager.sharedProjects)
                            <div class="row">
                                <div class="col-sm-4">$project.name</div>
                                <div class="col-sm-4">Notimp</div>
                                <div class="col-sm-4">$project.created</div>
                            </div>
                        #end
                    #end
                </div>
            </div>
        </div>
    </div>
</body>
</html>
#end